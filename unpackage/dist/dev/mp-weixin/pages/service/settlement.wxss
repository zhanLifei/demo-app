
.content{
	padding-left: 24rpx;
	padding-right: 24rpx;
}
.code_box{
	background-color: #FFFFFF;
	padding: 30rpx;
	margin-top: 30rpx;
}
.code-title{
	padding: 30rpx 0;
	color: #333333;
	font-size: 32rpx;
	text-align: center;
}
.code-number{
	padding: 20rpx 0;
	color: #000000;
	font-size: 36rpx;
	font-weight: bold;
	text-align: center;
}
.code-text{
	padding: 20rpx 0;
	color: #808080;
	font-size: 28rpx;
	text-align: center;
}
.bottom{
	color: #7f7f7f;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	background: #d7d7d7;
	font-size: 36rpx;
	width: 70%;
	text-align: center;
	/* padding: 20upx 70upx; */
	border-radius: 10rpx;
	margin: 90rpx auto 40rpx;
}
.btn,.btn2{
	width: 50%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
}
.btn2{
	color: #FFFFFF;
	background: #2089ff;
	border-radius: 0 10rpx 10rpx 0;
}

